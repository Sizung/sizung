!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Sizung"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all", 'data-turbolinks-track' => true
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application", 'data-turbolinks-track' => true

    - if ENV['RAILS_ENV'] == 'development'
      = javascript_include_tag('http://localhost:4000/react-app-bundle.js')
      :javascript
        console.warn("Development mode. Make sure to start 'node devServer.js'");

  %body
    .navbar.navbar-default.navbar-static-top.zero-vertical-margin.white-bg
      .container.full-width
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        .navbar-collapse.collapse.navbar-responsive-collapse
          - if user_signed_in?
            %ul.nav.navbar-nav
              %li.dropdown
                %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}, role: 'button',  aria_haspopup: 'true',  aria_expanded: 'false'}
                  Organizations
                  %span.caret
                %ul.dropdown-menu
                  - policy_scope(Organization).each do |organization|
                    %li
                      = link_to organization.name, organization_conversations_path(organization)
                  %li.divider{role: 'separator'}
                  %li
                    = link_to new_organization_path do
                      %i.fa.fa-plus
                      %span Add new organization
              %li= link_to 'Invite your team', new_user_invitation_path
            %ul.nav.navbar-nav.navbar-right
              %li.dropdown
                %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}, role: 'button',  aria_haspopup: 'true',  aria_expanded: 'false'}
                  - user = current_user
                  %span= react_component('User', {user: {email: user.email, firstName: user.first_name, lastName: user.last_name}, style: {display: 'inline-block'}, showName: true}, {tag: :span, prerender: true})
                  %span.caret
                %ul.dropdown-menu
                  %li= link_to 'Edit Profile', edit_user_registration_path
                  %li= link_to 'Logout', destroy_user_session_path, method: :delete
          - else
            %ul.nav.navbar-nav
              %li= link_to 'Login', new_user_session_path
              %li= link_to 'Sign up', new_user_registration_path

    .container.gray-bg.padding-lg.full-width
      .row
        .col-lg-12
          = bootstrap_flash
          = yield
      %footer
        %p &copy; Sizung 2015
