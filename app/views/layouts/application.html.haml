!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Sizung"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all", 'data-turbolinks-track' => true
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application", 'data-turbolinks-track' => true

    - if ENV['RAILS_ENV'] == 'development'
      = javascript_include_tag('http://localhost:4000/react-app-bundle.js')
      :javascript
        console.warn("Development mode. Make sure to start 'node devServer.js'");

  %body
    .navbar.navbar-inverse.navbar-static-top.zero-vertical-margin.nav-background
      .container.full-width
        - if user_signed_in?
          .pull-left
            = render partial: 'layouts/organizations_dropdown'
          %ul.nav.dropdown-container.pull-right
            %li.dropdown
              %a.user-dropdown.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}, role: 'button',  aria_haspopup: 'true',  aria_expanded: 'false', style: 'padding: 10px;'}
                - user = current_user
                %span.hidden-xs= react_component('User', {user: {email: user.email, firstName: user.first_name, lastName: user.last_name, presenceStatus: user.presence_status}, style: {display: 'inline-block'}, showName: true}, {tag: :span, prerender: true})
                %span.visible-xs= react_component('User', {user: {email: user.email, firstName: user.first_name, lastName: user.last_name, presenceStatus: user.presence_status}, style: {display: 'inline-block'}, showName: false}, {tag: :span, prerender: true})
              %ul.dropdown-menu.dropdown-menu-right
                %li= link_to 'Edit Profile', edit_user_registration_path
                %li= link_to 'Logout', destroy_user_session_path, method: :delete
        - else
          %ul.nav.navbar-nav
            %li.pull-left#login-nav= link_to 'Login', new_user_session_path
            %li.pull-left#signup-nav= link_to 'Sign up', new_user_registration_path

    .container.content-bg.padding-lg.full-width{style: 'min-height: 100%;'}
      .row
        .col-lg-12.app-body
          = bootstrap_flash
          = yield
      %footer.footer.nav-background
        &copy; Sizung 2016
