%h1= "#{@organization.name} - Conversations"

%table.table
  %thead
    %tr
      %th Title
      %th
      %th
      %th

  %tbody
    - @conversations.each do |conversation|
      %tr
        %td= link_to conversation.title, conversation, { data: { no_turbolink: true } }
        %td= link_to 'Edit', edit_conversation_path(conversation)
        %td= link_to 'Destroy', conversation, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Conversation', new_organization_conversation_path(@organization)
\|
= link_to 'Back', organization_path(@organization)
